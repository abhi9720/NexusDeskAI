{
  "name": "TaskflowAI",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "vite build && electron-builder",
    "reset-db": "node --experimental-specifier-resolution=node reset-db.js"
  },
  "dependencies": {
    "@google/genai": "^1.13.0",
    "@google/generative-ai": "^0.24.1",
    "@huggingface/inference": "^4.7.1",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.2.0",
    "date-fns": "^3.6.0",
    "electron-store": "^10.1.0",
    "idb": "^8.0.3",
    "marked": "^13.0.2",
    "mime": "^4.0.7",
    "node-cron": "^4.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.2.1",
    "sqlite-vec": "^0.1.4",
    "uuid": "^10.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.ai.taskflowai",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "electronIpcHandlers.js",
      "electronDBHelpers.js",
      "electonAiService.js",
      "package.json",
      "node_modules/electron-store/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/sqlite-vec-darwin-arm64/vec0.dylib",
        "to": "extensions/sqlite-vec-darwin-arm64/vec0.dylib"
      }
    ]
  }
}
